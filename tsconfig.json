{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@/*": ["client/src/*"],
      "@assets/*": ["attached_assets/*"]
    },

    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["server", "client", "shared", "attached_assets", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
